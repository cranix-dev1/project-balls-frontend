{
  "name": "project-balls",
  "version": "0.1.0",
  "description": "Communications app",
  "author": "Cranix",
  "homepage": "./",
  "private": true,
  "main": "main.js",

  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "cross-env": "^7.0.3",
    "dompurify": "^3.2.6",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "emoji-dictionary": "^1.0.12",
    "emoji-mart": "^5.6.0",
    "jwt-decode": "^4.0.0",
    "marked": "^15.0.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.2",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.5"
  },

  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "nsis": "^0.0.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.4",
    "wait-on": "^8.0.3"
  },

  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "cross-env BROWSER=none concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "npx electron main.js",
    "package": "yarn build && electron-builder",
    "dist": "yarn build && electron-builder --publish always"
  },

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },

  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },

  "build": {
    "appId": "com.projectballs.app",
    "productName": "Project Balls",
    "directories": {
      "buildResources": "asset",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "cranix-dev1",
        "repo": "project-balls-frontend"
      }
    ]
  }
}
